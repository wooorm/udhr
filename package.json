{
  "name": "udhr",
  "version": "2.0.0",
  "description": "Universal Declaration of Human Rights (Unicode) in plain-text and JSON",
  "license": "MIT",
  "keywords": [
    "universal",
    "declaration",
    "human",
    "rights",
    "unicode",
    "json",
    "plain",
    "text"
  ],
  "repository": "https://github.com/wooorm/udhr",
  "bugs": "https://github.com/unifiedjs/unified/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "index.js",
    "lib",
    "data/index-json.json",
    "data/index-txt.json",
    "data/information.json",
    "data/udhr-json",
    "data/udhr-txt"
  ],
  "devDependencies": {
    "bail": "^1.0.1",
    "eol": "^0.9.0",
    "mdast-zone": "^3.0.0",
    "nyc": "^11.0.0",
    "remark-cli": "^4.0.0",
    "remark-preset-wooorm": "^3.0.0",
    "tape": "^4.6.3",
    "unist-builder": "^1.0.2",
    "xml-to-json": "^0.1.0",
    "xo": "^0.18.0"
  },
  "scripts": {
    "scrape-data-txt": "curl --connect-timeout 5 --max-time 10 -L http://www.unicode.org/udhr/assemblies/udhr_txt.zip -o data/udhr-txt.zip || exit 0",
    "scrape-data-xml": "curl --connect-timeout 5 --max-time 10 -L http://www.unicode.org/udhr/assemblies/udhr_xml.zip -o data/udhr-xml.zip || exit 0",
    "scrape-data": "npm run scrape-data-txt && npm run scrape-data-xml",
    "unzip-data-txt": "unzip -o -d data/udhr-txt data/udhr-txt.zip || exit 0",
    "unzip-data-xml": "unzip -o -d data/udhr-xml data/udhr-xml.zip || exit 0",
    "unzip-data": "npm run unzip-data-txt && npm run unzip-data-xml",
    "build-md": "remark . -qfo",
    "build-data": "node script/build-data",
    "normalize-line-endings": "node script/normalize-line-endings",
    "build": "npm run scrape-data && npm run unzip-data && npm run build-data && npm run normalize-line-endings",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "xo": {
    "space": true,
    "esnext": false,
    "rules": {
      "guard-for-in": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm",
      "./script/support"
    ]
  }
}
