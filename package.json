{
  "name": "udhr",
  "version": "4.2.0",
  "description": "Universal Declaration of Human Rights (Unicode) in plain-text and JSON",
  "license": "MIT",
  "keywords": [
    "universal",
    "declaration",
    "human",
    "rights",
    "unicode",
    "json",
    "plain",
    "text"
  ],
  "repository": "wooorm/udhr",
  "bugs": "https://github.com/wooorm/udhr/issues",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/wooorm"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js",
    "lib",
    "data/index-json.json",
    "data/index-txt.json",
    "data/information.json",
    "data/udhr-json",
    "data/udhr-txt"
  ],
  "devDependencies": {
    "bail": "^1.0.0",
    "eol": "^0.9.0",
    "mdast-zone": "^4.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.0",
    "remark-cli": "^9.0.0",
    "remark-preset-wooorm": "^8.0.0",
    "tape": "^5.0.0",
    "unist-builder": "^2.0.0",
    "xml-to-json": "^0.1.0",
    "xo": "^0.38.0"
  },
  "scripts": {
    "generate:scrape:txt": "curl --connect-timeout 5 --max-time 10 -L https://www.unicode.org/udhr/assemblies/udhr_txt.zip -o data/udhr-txt.zip || exit 0",
    "generate:scrape:xml": "curl --connect-timeout 5 --max-time 10 -L https://www.unicode.org/udhr/assemblies/udhr_xml.zip -o data/udhr-xml.zip || exit 0",
    "generate:scrape": "npm run generate:scrape:txt && npm run generate:scrape:xml",
    "generate:unzip:txt": "unzip -o -d data/udhr-txt data/udhr-txt.zip || exit 0",
    "generate:unzip:xml": "unzip -o -d data/udhr-xml data/udhr-xml.zip || exit 0",
    "generate:unzip": "npm run generate:unzip:txt && npm run generate:unzip:xml",
    "generate:data": "node script/build-data",
    "generate:clean": "node script/normalize-line-endings",
    "generate": "npm run generate:scrape && npm run generate:unzip && npm run generate:data && npm run generate:clean",
    "format": "remark . -qfo && prettier . -w --loglevel warn && xo --fix",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "guard-for-in": "off",
      "unicorn/no-array-for-each": "off",
      "unicorn/no-fn-reference-in-iterator": "off",
      "unicorn/prefer-number-properties": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm",
      [
        "gfm",
        {
          "tablePipeAlign": false
        }
      ],
      "./script/support"
    ]
  }
}
