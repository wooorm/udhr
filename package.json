{
  "name": "udhr",
  "version": "5.2.0",
  "description": "Universal Declaration of Human Rights (Unicode)",
  "license": "MIT",
  "keywords": [
    "universal",
    "declaration",
    "human",
    "rights",
    "unicode",
    "json"
  ],
  "repository": "wooorm/udhr",
  "bugs": "https://github.com/wooorm/udhr/issues",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/wooorm"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "declaration/",
    "index.d.ts",
    "index.js"
  ],
  "devDependencies": {
    "@types/hast": "^3.0.0",
    "@types/mdast": "^4.0.0",
    "@types/node": "^22.0.0",
    "@types/unist": "^3.0.0",
    "@types/xast": "^2.0.0",
    "c8": "^10.0.0",
    "hastscript": "^8.0.0",
    "mapz": "^2.0.0",
    "mdast-zone": "^6.0.0",
    "prettier": "^3.0.0",
    "rehype-format": "^5.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-cli": "^12.0.0",
    "remark-preset-wooorm": "^11.0.0",
    "type-coverage": "^2.0.0",
    "typescript": "^5.0.0",
    "unified": "^11.0.0",
    "unist-builder": "^4.0.0",
    "unist-util-select": "^5.0.0",
    "xast-util-from-xml": "^4.0.0",
    "xast-util-to-string": "^3.0.0",
    "xo": "^0.60.0",
    "zwitch": "^2.0.0"
  },
  "scripts": {
    "prepack": "npm run build && npm run format",
    "generate:scrape": "curl --connect-timeout 5 --max-time 10 -L https://www.unicode.org/udhr/assemblies/udhr_xml.zip -o xml.zip || exit 0",
    "generate:unzip": "unzip -o -d xml xml.zip || exit 0",
    "generate:data": "node --conditions development script/build-data",
    "generate": "npm run generate:scrape && npm run generate:unzip && npm run generate:data",
    "build": "tsc --build --clean && tsc --build && type-coverage",
    "format": "remark . -qfo && prettier . -w --log-level warn && xo --fix",
    "test-api": "node --conditions development test.js",
    "test-coverage": "c8 --check-coverage --100 --reporter lcov npm run test-api",
    "test": "npm run build && npm run format && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "logical-assignment-operators": "off",
      "unicorn/prefer-string-replace-all": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-wooorm",
      "./script/support.js",
      [
        "remark-lint-table-pipe-alignment",
        false
      ],
      [
        "gfm",
        {
          "tablePipeAlign": false
        }
      ]
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "strict": true
  }
}
